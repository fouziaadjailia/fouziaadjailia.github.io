<style>
  .publications-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .publication-category {
    margin-bottom: 3rem;
  }

  .publication-category h3 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 3px solid;
    border-image: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%) 1;
  }

  .publications-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .publication-item {
    position: relative;
    border-left: 4px solid transparent;
    border-image: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%) 1;
  }

  .publication-item h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .authors {
    color: #4b5563;
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
    font-style: italic;
  }

  .venue {
    color: #6b7280;
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  .year {
    background: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
  }

  .publication-stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 4rem;
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    min-width: 160px;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #3B82F6 0%, #8B5CF6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
    text-align: center;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .year {
      position: static;
      margin-top: 0.5rem;
      display: inline-block;
    }

    .publication-stats {
      gap: 1rem;
    }

    .stat-card {
      min-width: 120px;
      padding: 1.5rem;
    }
  }
</style>